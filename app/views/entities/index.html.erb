<section>
  <div>
    <div>
      <%= link_to "<Back", groups_path %>
      <h2><Back</h2>
    </div>

    <h2>Transactions</h2>
    <%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
  </div>

  <div>
    <% if @entities.empty? %>
      <h3>No records found!</h3>
    <% else %>
      <% @entities.each do |t| %>
        <tr>
        <td><%= t.created_at.strftime("%d-%b-%Y") %></td>
        <td><%= t.name %></td>
        <td>$<%= t.amount %></td>
        <td>        
            <%= button_to "Delete", group_entity_path(current_user, t.group, t ), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-success mb-5" %>
        </td>
        </tr>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= link_to "ADD TRANSACTION", new_group_entity_path %>
  </div>
</section>